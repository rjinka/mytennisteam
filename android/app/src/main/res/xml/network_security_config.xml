<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Default configuration for release builds -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">auth.mytennisteam.com</domain>
    </domain-config>

    <domain-config cleartextTrafficPermitted="true">
        <!-- IP address for localhost on the host machine from the Android emulator -->
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">localhost</domain>
    </domain-config>

    <!-- Debug-only overrides for local development -->
    <debug-overrides>
        <trust-anchors>
            <!-- Allow user-installed certificates for debugging proxies -->
            <certificates src="user"/>
            <certificates src="system"/>
        </trust-anchors>
    </debug-overrides>
</network-security-config>